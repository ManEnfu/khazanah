<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="Adw" version="1.2"/>

  <!-- A List view of words in the lexicon with related controls. -->
  <template class="KhzProjectLexiconWordListView" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkRevealer">
            <property name="reveal-child"
                      bind-source="KhzProjectLexiconWordListView"
                      bind-property="reveal-header"
                      bind-flags="sync-create"/>
            <!-- <property name="reveal-child">True</property> -->
            <property name="transition-type">slide-up</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkCenterBox" id="word_header">
                      <style>
                        <class name="word-header"/>
                      </style>
                      <child type="start">
                        <object class="GtkToggleButton" id="search_word_button">
                          <property name="icon-name">system-search-symbolic</property>
                          <property name="tooltip-text">Search word</property>
                        </object>
                      </child>
                      <child type="center">
                        <object class="GtkLabel">
                          <property name="label">Word</property>
                          <style>
                            <class name="heading"/>
                          </style>
                        </object>
                      </child>
                      <child type="end">
                        <object class="GtkBox">
                          <property name="spacing">6</property>
                          <child>
                            <object class="GtkButton" id="edit_button">
                              <property name="icon-name">document-edit-symbolic</property>
                              <property name="tooltip-text">Edit words</property>
                              <!-- <property name="action-name">lexicon.add-word</property> -->
                            </object>
                          </child>
                          <child>
                            <object class="GtkButton" id="add_word_button">
                              <property name="icon-name">list-add-symbolic</property>
                              <property name="tooltip-text">Add new word</property>
                              <property name="action-name">lexicon.add-word</property>
                            </object>
                          </child>
                        </object>
                      </child>
                    </object>
                  </child>
                  <child>
                    <object class="GtkSeparator"/>
                  </child>
              </object>
            </child>
          </object> <!-- GtkRevealer -->
        </child>
        
        <child>
          <object class="GtkSearchBar" id="search_bar">
            <property name="search-mode-enabled"
                      bind-source="search_word_button"
                      bind-property="active"
                      bind-flags="sync-create|bidirectional"/>
            <property name="child">
              <object class="AdwClamp">
                <property name="hexpand">False</property>
                <property name="tightening-threshold">300</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkSearchEntry" id="search_entry">
                        <property name="placeholder-text" translatable="yes">Search word</property>
                        <property name="hexpand">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkMenuButton" id="search_filter_button">
                        <property name="icon-name" translatable="yes">funnel-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object> <!-- GtkRevealer -->
        </child>
        
        <child>
          <object class="GtkStack" id="view_stack">
            <property name="visible-child">main_page</property>
            <property name="transition-type">crossfade</property>
            <child>
              <object class="GtkScrolledWindow" id="main_page">
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkListView" id="list_view">
                    <style>
                      <class name="navigation-sidebar"/>
                      <class name="background"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          
            <child>
              <object class="AdwStatusPage" id="list_empty_page">
                <property name="icon-name">accessories-dictionary-symbolic</property>
                <property name="title">Empty Lexicon</property>
                <property name="description">Start by adding a new word.</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="compact"/>
                </style>
              </object>
            </child>

          </object>
        </child>
      </object> <!-- GtkBox -->
    </child>
  </template>
</interface>
