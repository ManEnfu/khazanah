<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="Adw" version="1.2"/>

  <template class="KhzProjectOverviewView" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <child type="start">
              <object class="KhzToolbarStartControls" id="start_controls">
                <property name="buttons-sensitive"
                          bind-source="KhzProjectOverviewView"
                          bind-property="project-opened"
                          bind-flags="sync-create"/>
              </object>
            </child>
            <child type="end">
              <object class="KhzToolbarEndControls" id="end_controls">
                <property name="buttons-sensitive"
                          bind-source="KhzProjectOverviewView"
                          bind-property="project-opened"
                          bind-flags="sync-create"/>
              </object>
            </child>
          </object> <!-- AdwHeaderBar -->
        </child>

        <child>
          <object class="AdwClamp">
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Language Family</property>
                    <property name="halign">start</property>
                  </object>
                </child>
                <child>
                  <object class="GtkListBox">
                    <property name="selection-mode">none</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwEntryRow" id="lang_family_name_entry">
                        <property name="title">Language Family Name</property>
                        <signal name="changed" 
                                handler="handle_lang_family_name_entry_apply"
                                swapped="true"/>
                      </object>
                    </child>
                    <child>
                      <object class="AdwEntryRow" id="author_entry">
                        <property name="title">Author</property>
                        <signal name="changed" 
                                handler="handle_author_entry_apply"
                                swapped="true"/>
                      </object>
                    </child>
                    <child>
                      <object class="AdwEntryRow" id="description_entry">
                        <property name="title">Description</property>
                        <signal name="changed" 
                                handler="handle_description_entry_apply"
                                swapped="true"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object> <!-- GtkBox -->
            </property>
          </object> <!-- AdwClamp -->
        </child>
      </object> <!-- GtkBox -->
    </child>
  </template> <!-- KhzProjectOverviewView -->

</interface>
